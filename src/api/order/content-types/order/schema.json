      "default": "pendiente"
    },
    "note": {
      "type": "text",
      "maxLength": 120
    },
    "orderItems": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-item"
    },
    "userAddress": {
      "type": "component",
      "repeatable": false,
      "component": "order.user-address"
    }
  }
}
