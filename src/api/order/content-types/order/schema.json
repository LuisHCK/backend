{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Pedido",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "total": {
      "type": "decimal",
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processed",
        "in_transit",
        "delivered",
        "pickup_ready",
        "cancelled"
      ],
      "required": true,
      "default": "pending"
    },
    "note": {
      "type": "text",
      "maxLength": 120
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "menu.item",
      "required": true
    }
  }
}
